# syntax=docker/dockerfile:1

FROM amazoncorretto:17.0.8-alpine3.18

ARG PROJECT=docker-demo
ARG PROJECT_VERSION=0.0.1-SNAPSHOT

ENV INFP_PROJECT=$PROJECT
ENV INFP_PROJECT_VERSION=$PROJECT_VERSION

WORKDIR /opt/$INFP_PROJECT
COPY target/$INFP_PROJECT-$INFP_PROJECT_VERSION.jar .

EXPOSE 10499
ENTRYPOINT java -jar ${INFP_PROJECT}-${INFP_PROJECT_VERSION}.jar
